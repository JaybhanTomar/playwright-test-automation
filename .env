# MCP Environment Configuration
# Copy this to .env and configure with your actual values

# AI Model Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# MCP Server Configuration
MCP_SERVER_PORT=3001
MCP_DATA_SERVER_PORT=3002
MCP_ANALYZER_SERVER_PORT=3003

# Project Configuration
PROJECT_NAME=playwright-demo-new
PROJECT_ROOT=/home/jtomar/playwright-demo/playwright-demo-new

# Test Configuration
DEFAULT_TEST_ENVIRONMENT=uat361
TEST_DATA_OUTPUT_DIR=test-results/mcp-data
ANALYSIS_OUTPUT_DIR=test-results/mcp-analysis

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs/mcp

# Performance Configuration
PERFORMANCE_THRESHOLD_MS=30000
FLAKY_TEST_THRESHOLD=0.2

# AI Model Settings
AI_MODEL_TEMPERATURE=0.1
AI_MAX_TOKENS=2000
AI_MODEL_NAME=claude-3-sonnet

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=true
SAVE_DEBUG_SCREENSHOTS=true

# GitHub Integration
GITHUB_INTEGRATION=false
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your-username
GITHUB_REPO=playwright-demo-new
GITHUB_BRANCH=main
GITHUB_CREATE_ISSUES=true
GITHUB_CREATE_PRS=false
GITHUB_COMMENT_ON_PRS=true

# CI/CD Integration
CI_INTEGRATION=false
CI_PROVIDER=github-actions
CI_WEBHOOK_URL=your_webhook_url_here
CI_NOTIFY_ON_FAILURE=true
CI_NOTIFY_ON_SUCCESS=false

# Slack Integration
SLACK_INTEGRATION=false
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#testing

# Jira Integration (Optional)
JIRA_INTEGRATION=false
JIRA_URL=your_jira_instance_url
JIRA_USERNAME=your_jira_username
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=TEST

# Teams Integration (Optional)
TEAMS_INTEGRATION=false
TEAMS_WEBHOOK_URL=your_teams_webhook_url_here
